<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", turistic_points_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_turistic_point_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", turistic_point_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.turistic_point.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @turistic_point.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.turistic_point.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @turistic_point.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.turistic_point.city_id", :default => t("activerecord.labels.city_id", :default => "City")) %>:</b>
          <%= @turistic_point.city_id %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_turistic_point_path(@turistic_point), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", turistic_point_path(@turistic_point), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
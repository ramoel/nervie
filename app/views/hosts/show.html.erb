<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", hosts_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_host_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", host_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.host.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>:</b>
          <%= @host.nome %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.endereco", :default => t("activerecord.labels.endereco", :default => "Endereco")) %>:</b>
          <%= @host.endereco %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.bairro", :default => t("activerecord.labels.bairro", :default => "Bairro")) %>:</b>
          <%= @host.bairro %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.cep", :default => t("activerecord.labels.cep", :default => "Cep")) %>:</b>
          <%= @host.cep %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.telefone", :default => t("activerecord.labels.telefone", :default => "Telefone")) %>:</b>
          <%= @host.telefone %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.fax", :default => t("activerecord.labels.fax", :default => "Fax")) %>:</b>
          <%= @host.fax %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.site", :default => t("activerecord.labels.site", :default => "Site")) %>:</b>
          <%= @host.site %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</b>
          <%= @host.email %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.host.city_id", :default => t("activerecord.labels.city_id", :default => "Cidade")) %>:</b>
          <%= @host.cidade_id %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_host_path(@host), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", host_path(@host), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
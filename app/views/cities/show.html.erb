<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", cities_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_city_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", city_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.city.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>:</b>
          <%= @city.nome %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.city.estado", :default => t("activerecord.labels.estado", :default => "Estado")) %>:</b>
          <%= @city.estado %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.city.populacao", :default => t("activerecord.labels.populacao", :default => "Populacao")) %>:</b>
          <%= @city.populacao %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.city.fundacao", :default => t("activerecord.labels.fundacao", :default => "Fundacao")) %>:</b>
          <%= @city.fundacao %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.city.aniversario", :default => t("activerecord.labels.aniversario", :default => "Aniversario")) %>:</b>
          <%= @city.aniversario %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_city_path(@city), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", city_path(@city), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
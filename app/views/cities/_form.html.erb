
  <div class="group">
    <%= f.label :nome, t("activerecord.attributes.city.nome", :default => "Name"), :class => :label %>
    <%= f.text_field :nome, :class => 'text_field' %>
    <span class="description">Ex: Chapada dos Guimar√£es</span>
  </div>

  <div class="group">
    <%= f.label :estado, t("activerecord.attributes.city.estado", :default => "State"), :class => :label %>
    <%= f.text_field :estado, :class => 'text_field' %>
    <span class="description">Ex: Mato Grosso</span>
  </div>

  <div class="group">
    <%= f.label :populacao, t("activerecord.attributes.city.populacao", :default => "Population"), :class => :label %>
    <%= f.text_field :populacao, :class => 'text_field' %>
    <span class="description">Ex: 18.190</span>
  </div>

  <div class="group">
    <%= f.label :fundacao, t("activerecord.attributes.city.fundacao", :default => "Foundation"), :class => :label %>
    <%= f.date_select :fundacao, :class => 'date_select', :start_year => 1500 %>
    <span class="description">The date when the city was founded</span>
  </div>

  <div class="group">
    <%= f.label :aniversario, t("activerecord.attributes.city.aniversario", :default => "Birthday"), :class => :label %>
    <%= f.date_select :aniversario, :class => 'date_select', :discard_year => true %>
    <span class="description">City birthday</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", cities_path, :class => "button" %> 
</div>